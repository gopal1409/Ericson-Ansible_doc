 517  cd springboot-chat-app/
  518  ls
  519  nano dockerfile
###put this content inside the docker file
FROM openjdk:20-slim-buster
ARG JAR_FILE=target/*.jar
COPY ${JAR_FILE} application.jar
EXPOSE 8080
ENTRYPOINT ["java","-jar","/application.jar"]
