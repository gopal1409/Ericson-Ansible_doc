 559  cd springboot-chat-app/
  560  mkdir ansible
  561  cd ansible/
  562  touch ansible.cfg
####put this content
####create a file
nano ansible.cfg
#############
[defaults]
inventory = dev.inv
forks = 5
poll_interval = 15
###create the inventory file
nano dev.inv
### inside inventory file 
ubuntu
####create the tomcat.yml
nano tomcat.yml
#########
---
- 
  hosts: all    
  vars: 
    tomcat_download_url: https://dlcdn.apache.org/tomcat/tomcat-9/v9.0.69/bin/apache-tomcat-9.0.69.tar.gz
    tomcat_download_location: /usr/share/tomcat/apache-tomcat-9.0.69
  tasks:
  
     
      - name: install openjdk ubuntu
        package: 
          name: default-jdk 
          update_cache: yes
          state: present 
      - name: create a group tomcat 
        group:
          name: tomcat 
          state: present 
      - name: create user tomcat 
        user: 
          name: tomcat 
          state: present 
          group: tomcat
      - name: create a tomcat directory 
        file: 
          path: /usr/share/tomcat
          state: directory
          owner: tomcat 
          group: tomcat 
      - name: Download Tomcat 
        get_url:
          url: "{{tomcat_download_url}}"
          dest: "{{tomcat_download_location}}"
      - name: extract tomcat 
        unarchive:
          src: "{{tomcat_download_location}}"
          dest: /usr/share/tomcat
          owner: tomcat 
          group: tomcat 
          remote_src: yes 
          extra_opts: [--strip-components=1]
          creates: /usr/share/tomcat/bin 
      - name: copy tomcat service 
        template:
          src: templates/tomcat.service.j2 
          dest: /etc/systemd/system/tomcat.service
        when: ansible_service_mgr == 'systemd'
      - name: start and enable tomcat 
        service:
          daemon_reload: yes
          name: tomcat 
          state: started 
          enabled: yes 
        when: ansible_service_mgr == 'systemd'
      - name: check the status 
        uri:
          url: http://{{inventory_host}}:8181
          method: GET 
          timeout: 20
          status_code: 200
         
        ########
        ###come out of the directory and upload the content in git hub
         571  cd ..
  572  git add .
  573  git commit -m "ansible play"

  575  git push origin master
  ###add template folder
   588  cd springboot-chat-app/
